{{#.}}
	<div class="friendDetailsContainer" id="friendDetails_{{id_str}}" class="friendDetails">
		<img src="{{profile_image_url}}" /><strong>{{screen_name}}</strong> <span id="messageCount_{{id_str}}">{{message_count}} messages </span> <a href="javascript:app.toggleFriendMessages('{{id_str}}',this.id)" id="friendMessagesToggleLink_{{id_str}}">show conversation</a> 
		{{tweetShortDate most_recent.created_at}}  {{#if publicKey}}<a href="javascript:app.openDirectMessageForm('{{id_str}}')">Send message</a>{{/if}}
		<div id="friendPublicKeyDetails_{{id_str}}">
		{{#if publicKey}}
			<div id="friendMessageForm_{{id_str}}" style="display:none">
			<br/>
			<textarea id="directMessage_{{id_str}}" style="width:50%"></textarea>
			<input type=button onClick="app.prepareDirectMessage('{{id_str}}')" value="Send message" class="button"/>
			<br/>Not sure if {{screen_name}} has your public key?  <input type=button class="button" onClick="app.initiateDirectMessages({{id_str}},true)" value="Send it"/><br/>
			</div>
		{{/if}}
		<div id="friendKeyContainer_{{id_str}}">{{#unless sentKey}}
			Do you want to invite {{screen_name}} to use Seecret with you?
			<input type=button class="button" value="YES" onClick="app.initiateDirectMessages({{receiver_id}})"/>.  
			<br/>{{screen_name}} will receive an invite message and a Seecret key that will allow you to exchange encrypted messages.
		{{/unless}}</div>
		<br/>
		<div id="friendMessages_{{id_str}}" style="display:none" class="friendMessages"></div>
	</div>
{{/.}}


