   		 			{{#.}}
					<div class="basicTweet" style="display:none;">
						<div class="leftCol"><a href="https://www.twitter.com/{{user.screen_name}}" target="_blank"><img src="{{user.profile_image_url}}" /></a></div>
						<div class="rightCol">
							<div class="profileInfo">
								<div class="user">{{user.name}}</div> 
								<div class="userLink"><a href="javascript:app.updateUserTimeline('{{user.screen_name}}',true)" target="_blank">@{{user.screen_name}}</a></div> 
								<div class="tweetDate">({{tweetShortDate created_at}})</div>
							</div>
							<div class="message"> 
							{{#if seecret}}
								<div class="originalMessage">
									{{#each covertexts}}
										<div class="messages">
											<div class="tweetLogo"></div>
											<div>{{this}}</div>
										</div>
									{{/each}}
								</div>
								<div class="tworse">
									<div class="seecretLogo"><div class="icon"></div></div>
									<div class="">{{seecret}}</div>
								</div>  
							{{else}}
								<div class="tworse">
									<div class="seecretLogo"></div>
									<div class="">{{text}}</div>
								</div>  
							{{/if}}
							
							</div>
							<div class="footer">
								{{#if seecret}}
								<div class="tweetActionsDisabled">
									<ul class="tweetActions">
										<li class="reply"><div href="" alt="Reply"></div></li>
										<li class="retweet"><div href="" alt="ReTweet"></div></li> <!-- if retweet should be 'on' use class=retweetOn -->
										<li class="favorite"><div href="" alt="Favorite"></div></li> <!-- if favorite should be 'on' use class=favoriteOn -->
										{{#if follower}}
										<li class="dm">
											<div class="dm_button3" title="Message" onclick="app.setDirectMessageReceiver('{{user.id_str}}','{{user.screen_name}}');app.setView(app.DIRECT_MESSAGES_VIEW);">
												<div class="fa fa-envelope"></div>
											</div>
										</li>
										{{/if}}
									</ul>							
								</div>
								{{else}}
								<div class="tweetActions">
									<ul class="tweetActions">
										<li class="reply"><div href="" alt="Reply"></div></li>
										<li class="retweet"><div href="" alt="ReTweet"></div></li> <!-- if retweet should be 'on' use class=retweetOn -->
										<li class="favorite"><div href="" alt="Favorite"></div></li> <!-- if favorite should be 'on' use class=favoriteOn -->
										{{#if follower}}
										<li class="dm">
											<div class="dm_button3" title="Message" onclick="app.setDirectMessageReceiver('{{user.id_str}}','{{user.screen_name}}');app.setView(app.DIRECT_MESSAGES_VIEW);">
												<div class="fa fa-envelope"></div>
											</div>
										</li>
										{{/if}}
									</ul>							
								</div>
								{{/if}}
								
							</div>
						</div>
					</div>
	 				{{/.}}
